#!/usr/bin/env bash
[ "$#" == 0 ] && exit

[ "$NOTE" == "" ] && NOTE=$HOME/.config/note.txt

if [ "$1" == "-c" ]; then
    [ -f $NOTE ] && rm -i $NOTE
elif [ "$1" == "-s" ]; then
    [ -f $NOTE ] && less $NOTE
else
    echo "---------------------------" >> $NOTE
    echo "$(date '+%d(%a)/%m(%b)/%y %R:%S')" >> $NOTE
    echo "$@" >> $NOTE
fi
