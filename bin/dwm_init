#!/usr/bin/env bash

# keyboard layout
# `$ grep "grp:.*toggle" /usr/share/X11/xkb/rules/base.lst`
# set PT as default and bind scroll lock to toggle between layouts
exec setxkbmap -layout pt,us -option grp:sclk_toggle &
# cmqfr
#exec setxkbmap -device 12 -device 13 -layout us &
# 15-key pad
#exec setxkbmap -device 18 -layout us &

#exec xsetroot -name " " &
exec slstatus -d & # status bar
exec xset m 0 0 & # disable mouse accel
exec redshift &
exec xautolock -time 10 -locker slock -killtime 5 -killer "systemctl suspend" -bell 0 -noclose &

if [ -f ~/.fehbg ]; then
    . ~/.fehbg # wallpaper
fi

exec dwm # window manager
