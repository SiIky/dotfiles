alias exit='echo ^D scrub'

alias vi='vim -p'
alias vim='vim -p'
alias cls='clear'
alias ..='cd ..'
alias ls='ls -ACF --color=auto'
alias ll='ls -AlF --color=auto'
alias lh='ls -AlFh --color=auto'
alias rm='rm -ri'
alias cp='cp -ri'
alias mv='mv -i'
alias tmux='tmux -2u'
alias less='less -N'
alias ed='vim'
alias lynx='lynx -vikeys'
alias mdv='markdown $1 | lynx -stdin'
alias wget='wget -c'
alias mk='make'
alias vimup='vim +PlugUpgrade +PlugInstall +PlugUpdate'

# Git aliases (if no hub replace with git)
if [ -f ~/.config/hub/hub.bash_completion.sh ]; then
    . ~/.config/hub/hub.bash_completion.sh
fi
alias git='hub'
alias gadd='hub add'
alias gmv='hub mv'
alias grm='hub rm'
alias glog='hub log'
alias gcommit='hub commit -v'
alias gpush='hub push'
alias gpull='hub pull --stat'
alias gstatus='hub status'
alias gdiff='hub diff'
alias gblame='hub blame'
alias gclone='hub clone'
alias gconfig='hub config'
